{
  "name": "react-gracefully",
  "version": "1.0.0",
  "description": "A utility for gracefully rendering react server side",
  "keywords": [
    "react",
    "gracefully",
    "ssr",
    "server",
    "side",
    "render"
  ],
  "license": "MIT",
  "author": "Joshua Vernon",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rm -rf ./lib",
    "cli": "cbf -j cli,cli:docs,current-version,postinstall,latest-published-version,tag:build-annotated,tag:changes-since-latest,tag:latest,tag:latest-annotated,tag:update-latest,prepare,prepublishOnly,preversion,postversion",
    "cli:docs": "cbf -d -j cli",
    "current-version": "echo $npm_package_version",
    "postinstall": "npm run sort",
    "latest-published-version": "npm view cbf version",
    "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx .",
    "lint:fix": "eslint --fix --ignore-path .gitignore --ext .ts,.tsx,.js,.jsx .",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "sort": "sort-package-json",
    "tag:build-annotated": "echo \"$(npm run --silent tag:latest-annotated)\n\n$(npm run --silent tag:changes-since-latest)\"",
    "tag:changes-since-latest": "echo \"$(git --no-pager log $(git describe --abbrev=0 --tags $(git rev-list --tags --skip=1 --max-count=1))..$(git describe --tags --abbrev=0) --no-merges --oneline --pretty=format:'- %s')\"",
    "tag:latest": "echo $(git describe --tags --abbrev=0)",
    "tag:latest-annotated": "echo $(git --no-pager log --tags -n1 --oneline --pretty=\"%s\")",
    "tag:update-latest": "git tag -f \"$(npm run --silent tag:latest)\" \"$(npm run --silent tag:latest)\"^{} -a -m \"$(npm run --silent tag:build-annotated)\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "preversion": "npm run lint",
    "version": "genversion --semi version.js && git add version.js",
    "postversion": "npm run --silent tag:update-latest && git push -u origin $(git rev-parse --abbrev-ref HEAD) && git push --follow-tags"
  },
  "dependencies": {
    "react-sweet-state": "^2.4.4"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.16",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "cbf": "^2.3.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^6.0.1",
    "eslint-plugin-standard": "^5.0.0",
    "genversion": "^2.2.1",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "sort-package-json": "^1.48.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
